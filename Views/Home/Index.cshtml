@model IEnumerable<TranGiaBao_0230_lab02.Models.Product>
@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}

<section class="products-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Our Products</h2>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="product-card h-100">
                        <div class="product-image-wrapper">
                            <img src="@item.ImageUrl" class="card-img-top product-image" alt="@item.Name">
                            <div class="hover-overlay">
                                <a asp-controller="ShoppingCart" asp-action="AddToCart"
                                   asp-route-productId="@item.Id"
                                   asp-route-quantity="@numOfQuantity"
                                   class="btn btn-primary btn-add-cart">
                                    <i class="bi-cart-plus"></i> Add to Cart
                                </a>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="product-title">@item.Name</h5>
                            <div class="product-price mt-auto">
                                <span class="price-label">Price:</span>
                                <span class="price-amount">@item.Price.ToString("#,##0") VNĐ</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .products-section {
        background-color: #f8f9fa;
    }

    .product-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-5px);
    }

    .product-image-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 10px 10px 0 0;
    }

    .product-image {
        height: 300px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .hover-overlay {
        position: absolute;
        bottom: -50px;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.7);
        padding: 1rem;
        transition: bottom 0.3s ease;
        text-align: center;
    }

    .product-image-wrapper:hover .hover-overlay {
        bottom: 0;
    }

    .product-image-wrapper:hover .product-image {
        transform: scale(1.1);
    }

    .product-title {
        font-size: 1.1rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .product-price {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid #eee;
    }

    .price-label {
        color: #666;
    }

    .price-amount {
        font-weight: bold;
        color: #2c3e50;
    }

    .btn-add-cart {
        width: 80%;
        border-radius: 25px;
    }

    .btn-add-cart:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>