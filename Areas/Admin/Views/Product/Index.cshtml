@model IEnumerable<TranGiaBao_0230_lab02.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!-- Danh mục sản phẩm -->
<section id="products" class="container py-5">
    <h2 class="text-center mb-4">Danh sách sản phẩm</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card text-center">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">@product.Price</p>
                        <p>
                            <a asp-controller="Product" asp-action="Display" asp-route-id="@product.Id">View</a> |
                            <a asp-controller="Product" asp-action="Update" asp-route-id="@product.Id">Edit</a> |
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                        </p>
                        <a href="#" type="button" class="btn btn-outline-success">Mua ngay</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>